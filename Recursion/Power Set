// User function Template for Java

class Solution {
    public List<String> AllPossibleStrings(String s) {
        // Code here
        ArrayList<String> ans = new ArrayList<>();
        helper(0,s,"",ans);
        Collections.sort(ans);
        return ans;

    }
    public void helper(int idx, String s, String curr, ArrayList<String> ans){
        if(idx == s.length()){           //agar index last tak gya to ans me add kar do current aur usko return kar do
            ans.add(curr);
            return;
        }
        helper(idx+1,s,curr,ans);                //exclude
        helper(idx+1,s,curr+s.charAt(idx),ans);    //include 
    }
}
